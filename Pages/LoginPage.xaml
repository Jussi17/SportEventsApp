<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="SportEventsApp.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Kirjaudu">

    <VerticalStackLayout
        Padding="20"
        Spacing="15"
        VerticalOptions="Center"
        WidthRequest="300">
        <Label
            FontAttributes="Bold"
            FontSize="24"
            HorizontalOptions="Center"
            Text="Kirjaudu sisään" />

        <Entry x:Name="UsernameEntry" Placeholder="Käyttäjätunnus" />
        <Entry
            x:Name="PasswordEntry"
            IsPassword="True"
            Placeholder="Salasana" />

        <Button
            BackgroundColor="#1976D2"
            Clicked="OnLoginClicked"
            Text="Kirjaudu"
            TextColor="White" />
        <Button
            BackgroundColor="Red"
            Clicked="GoToRegister_Clicked"
            Text="Rekisteröidy"
            TextColor="White" />

    </VerticalStackLayout>
</ContentPage>
