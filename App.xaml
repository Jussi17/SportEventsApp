<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="SportEventsApp.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SportEventsApp">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Switch">
                <Setter Property="OnColor" Value="{AppThemeBinding Light=Red, Dark=Red}" />
                <Setter Property="ThumbColor" Value="{AppThemeBinding Light=DarkBlue, Dark=White}" />
            </Style>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
