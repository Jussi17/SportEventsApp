<Shell
    x:Class="SportEventsApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:SportEventsApp.Pages"
    Title="SportEventsApp">

    <!--  Hampurilaisvalikko  -->
    <Shell.FlyoutHeader>
        <Grid Padding="10" RowDefinitions="Auto,Auto">
            <Label
                Grid.Row="0"
                Padding="0,0,0,10"
                FontAttributes="Bold"
                FontSize="20"
                Text="Tumma teema" />
            <Switch
                x:Name="TeemaSwitch"
                Grid.Row="1"
                Toggled="TeemaToggled" />
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Tapahtumat" Icon="icon_events.png">
        <ShellContent Title="Lista" ContentTemplate="{DataTemplate pages:EventsListPage}" />
        <ShellContent Title="Kalenteri" ContentTemplate="{DataTemplate pages:CalendarPage}" />
        <ShellContent Title="Hallinta" ContentTemplate="{DataTemplate pages:AdminPage}" />
    </FlyoutItem>
</Shell>
