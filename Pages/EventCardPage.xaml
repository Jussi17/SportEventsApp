<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SportEventsApp.Pages.EventCardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SportEventsApp.Helpers"
    Title="Tapahtuma">

    <ScrollView>
        <Frame
            Margin="20"
            Padding="20"
            BackgroundColor="{AppThemeBinding Light=White,
                                              Dark=#333333}"
            BorderColor="LightGray"
            CornerRadius="20"
            HasShadow="True">

            <VerticalStackLayout Spacing="10">
                <Label
                    FontAttributes="Bold"
                    FontSize="24"
                    Text="{Binding Name}"
                    TextColor="{AppThemeBinding Light=Black,
                                                Dark=White}" />

                <Label
                    FontSize="18"
                    Text="{Binding Date, StringFormat='{0:dd.MM.yyyy HH:mm}'}"
                    TextColor="{AppThemeBinding Light=Black,
                                                Dark=White}" />

                <Label FontSize="18" Text="{Binding Location}" />

                <Label
                    FontSize="16"
                    Text="{Binding Channel}"
                    TextColor="{AppThemeBinding Light=Black,
                                                Dark=White}" />

                <Label
                    FontSize="14"
                    LineBreakMode="WordWrap"
                    Text="{Binding Description}"
                    TextColor="{AppThemeBinding Light=Black,
                                                Dark=White}" />
            </VerticalStackLayout>
        </Frame>
    </ScrollView>

</ContentPage>
