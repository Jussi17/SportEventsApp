<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SportEventsApp.Pages.CalendarPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:calendar="clr-namespace:Plugin.Maui.Calendar.Controls;assembly=Plugin.Maui.Calendar"
    Title="Kalenteri"
    Padding="10">
    <Grid ColumnSpacing="10" RowSpacing="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Vasemmalla: Kalenteri  -->
        <StackLayout Grid.Column="0">
            <Label
                Margin="0,0,0,10"
                FontAttributes="Bold"
                FontSize="14"
                HorizontalTextAlignment="Center"
                Text="Valitse päivä" />
            <Border
                Padding="10"
                BackgroundColor="{AppThemeBinding Light=White,
                                                  Dark=#2b2b2b}"
                Stroke="LightGray"
                StrokeThickness="1">
                <calendar:Calendar
                    x:Name="MyCalendar"
                    BackgroundColor="{AppThemeBinding Light=White,
                                                      Dark=#404040}"
                    DaysTitleMaximumLength="TwoChars"
                    DeselectedDayTextColor="{AppThemeBinding Light=Blue,
                                                             Dark=Aqua}"
                    FirstDayOfWeek="Monday"
                    HeightRequest="375"
                    OtherMonthDayColor="{AppThemeBinding Light=Black,
                                                         Dark=Black}"
                    SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                    WeekendDayColor="{AppThemeBinding Light=Blue,
                                                      Dark=Aqua}" />
            </Border>
        </StackLayout>

        <!--  Oikealla: Tapahtumat  -->
        <StackLayout Grid.Column="1">
            <Label
                Margin="0,0,0,10"
                FontAttributes="Bold"
                FontSize="16"
                Text="{Binding SelectedDate, StringFormat='Tapahtumat {0:dd.MM.yyyy}'}" />
            <CollectionView ItemsSource="{Binding FilteredEvents}" SelectionMode="None">
                <CollectionView.EmptyView>
                    <Label
                        Margin="20"
                        FontSize="14"
                        HorizontalOptions="Center"
                        Text="Ei tapahtumia tänä päivänä"
                        TextColor="Gray"
                        VerticalOptions="Start" />
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="0,0,0,10"
                            Padding="15"
                            BackgroundColor="{AppThemeBinding Light=White,
                                                              Dark=#333333}"
                            BorderColor="LightGray"
                            CornerRadius="10"
                            HasShadow="True">
                            <VerticalStackLayout Spacing="5">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="{Binding Name}" />
                                <Label FontSize="14" Text="{Binding Date, StringFormat='⏰ {0:HH:mm}'}" />
                                <Label FontSize="14" Text="{Binding Location, StringFormat='📍 {0}'}" />
                                <Label
                                    FontSize="14"
                                    Text="{Binding Channel, StringFormat='📺 {0}'}"
                                    TextColor="Gray" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </Grid>
</ContentPage>