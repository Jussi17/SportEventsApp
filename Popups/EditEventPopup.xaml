<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="SportEventsApp.Popups.EditEventPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:SportEventsApp.Models"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:TypeArguments="models:Event">

    <Frame
        Padding="20"
        BackgroundColor="{AppThemeBinding Light=White,
                                          Dark=#333333}"
        CornerRadius="10"
        HasShadow="True"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        WidthRequest="300">

        <ScrollView>
            <VerticalStackLayout Spacing="10">

                <Label
                    FontSize="20"
                    HorizontalOptions="Center"
                    Text="Muokkaa tapahtumaa" />

                <Entry x:Name="NameEntry" Placeholder="Nimi" />
                <Entry x:Name="LocationEntry" Placeholder="Sijainti" />
                <Entry x:Name="ChannelEntry" Placeholder="Kanava" />
                <Editor
                    x:Name="DescriptionEditor"
                    AutoSize="TextChanges"
                    Placeholder="Kuvaus" />

                <DatePicker x:Name="DatePicker" />
                <TimePicker x:Name="TimePicker" Format="HH:mm" />

                <HorizontalStackLayout
                    Margin="0,10,0,0"
                    HorizontalOptions="Center"
                    Spacing="10">
                    <Button
                        BackgroundColor="Red"
                        Clicked="OnCancelClicked"
                        Text="Peruuta"
                        TextColor="White" />
                    <Button
                        Clicked="OnSaveClicked"
                        Text="Tallenna"
                        TextColor="White" />
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Frame>
</toolkit:Popup>