<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SportEventsApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Tapahtumat">

    <VerticalStackLayout Padding="10">

        <!--  Otsikko  -->
        <Label
            Margin="0,0,0,10"
            FontAttributes="Bold"
            FontSize="22"
            HorizontalOptions="Center"
            Text="Tulevat urheilutapahtumat" />

        <!--  Lista tapahtumista  -->
        <CollectionView
            x:Name="EventsCollection"
            ItemsSource="{Binding Events}"
            SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Margin="5"
                        Padding="10"
                        BackgroundColor="White"
                        CornerRadius="10"
                        HasShadow="True">

                        <Grid ColumnDefinitions="*, Auto">
                            <!--  Tapahtuman tiedot  -->
                            <VerticalStackLayout>
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="{Binding Name}" />
                                <Label
                                    FontSize="14"
                                    Text="{Binding Location}"
                                    TextColor="Gray" />
                                <Label FontSize="14" Text="{Binding Date, StringFormat='{0:dd.MM.yyyy HH:mm}'}" />
                            </VerticalStackLayout>

                            <!--  Kanava oikealle  -->
                            <Label
                                Grid.Column="1"
                                FontAttributes="Bold"
                                FontSize="14"
                                Text="{Binding Channel}"
                                TextColor="DarkBlue"
                                VerticalOptions="Center" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>

