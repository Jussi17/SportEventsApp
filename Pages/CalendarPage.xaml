<ContentPage
    x:Class="SportEventsApp.Pages.CalendarPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:calendar="clr-namespace:Plugin.Maui.Calendar.Controls;assembly=Plugin.Maui.Calendar"
    Title="Kalenteri"
    Padding="10">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!--  Tyyli viikonpÃ¤ivien otsikoille  -->
            <Style x:Key="DaysTitleStyle" TargetType="Label">
                <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <!--  PC: vaakasuora Grid, Android: pystysuora muuttuu code-behindissa  -->
    <Grid
        x:Name="MainGrid"
        ColumnSpacing="10"
        RowSpacing="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="CalendarColumn" Width="350" />
            <ColumnDefinition x:Name="EventsColumn" Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="TopRow" Height="Auto" />
            <RowDefinition x:Name="BottomRow" Height="*" />
        </Grid.RowDefinitions>

        <!--  Kalenteri  -->
        <StackLayout
            x:Name="CalendarStack"
            Grid.Row="0"
            Grid.Column="0">
            <Label
                Margin="0,0,0,10"
                FontAttributes="Bold"
                FontSize="14"
                HorizontalTextAlignment="Center"
                Text="Valitse pÃ¤ivÃ¤" />
            <Border
                Padding="10"
                BackgroundColor="{AppThemeBinding Light=White,
                                                  Dark=#2b2b2b}"
                Stroke="LightGray"
                StrokeThickness="1">
                <calendar:Calendar
                    x:Name="MyCalendar"
                    BackgroundColor="{AppThemeBinding Light=White,
                                                      Dark=#404040}"
                    DaysTitleLabelStyle="{StaticResource DaysTitleStyle}"
                    DaysTitleMaximumLength="TwoChars"
                    DeselectedDayTextColor="{AppThemeBinding Light=Blue,
                                                             Dark=Aqua}"
                    EventIndicatorColor="Red"
                    EventIndicatorSelectedColor="{AppThemeBinding Light=Blue,
                                                                  Dark=Aqua}"
                    EventIndicatorTextColor="{AppThemeBinding Light=Blue,
                                                              Dark=Aqua}"
                    Events="{Binding EventDates}"
                    FirstDayOfWeek="Monday"
                    SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                    SelectedDayTextColor="{AppThemeBinding Light=Blue,
                                                           Dark=Aqua}"
                    TodayFillColor="{AppThemeBinding Light=White,
                                                     Dark=DarkGrey}"
                    TodayTextColor="{AppThemeBinding Light=Blue,
                                                     Dark=Aqua}"
                    WeekendDayColor="{AppThemeBinding Light=Blue,
                                                      Dark=Aqua}"
                    WeekendTitleStyle="{StaticResource DaysTitleStyle}" />
            </Border>
        </StackLayout>

        <!--  Tapahtumat  -->
        <StackLayout
            x:Name="EventsStack"
            Grid.Row="0"
            Grid.Column="1"
            VerticalOptions="FillAndExpand">
            <Label
                Margin="0,0,0,10"
                FontAttributes="Bold"
                FontSize="16"
                Text="{Binding SelectedDate, StringFormat='Tapahtumat {0:dd.MM.yyyy}'}" />
            <CollectionView
                ItemsSource="{Binding FilteredEvents}"
                SelectionMode="None"
                VerticalOptions="Fill">
                <CollectionView.EmptyView>
                    <Label
                        Margin="20"
                        FontSize="14"
                        HorizontalOptions="Center"
                        Text="Ei tapahtumia tÃ¤nÃ¤ pÃ¤ivÃ¤nÃ¤"
                        TextColor="Gray"
                        VerticalOptions="Start" />
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="0,0,0,10"
                            Padding="15"
                            BackgroundColor="{AppThemeBinding Light=White,
                                                              Dark=#333333}"
                            BorderColor="LightGray"
                            CornerRadius="10"
                            HasShadow="True">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnEventTapped" />
                            </Frame.GestureRecognizers>
                            <VerticalStackLayout Spacing="5">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="{Binding Name}" />
                                <Label FontSize="14" Text="{Binding Date, StringFormat='â° {0:HH:mm}'}" />
                                <Label FontSize="14" Text="{Binding Location, StringFormat='ðŸ“ {0}'}" />
                                <Label
                                    FontSize="14"
                                    Text="{Binding Channel, StringFormat='ðŸ“º {0}'}"
                                    TextColor="Gray" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </Grid>
</ContentPage>